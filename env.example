# PulseCal SecureBand - Production Environment Configuration
# Copy this file to .env and update with your values
# DO NOT commit .env to version control

# ============================================================================
# Application Configuration
# ============================================================================
NODE_ENV=production
LOG_LEVEL=info
DEBUG=false

# ============================================================================
# Web Application
# ============================================================================
WEB_PORT=3000
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_AI_SERVICES_URL=http://localhost:8000

# ============================================================================
# API Server
# ============================================================================
API_PORT=3001
API_URL=http://localhost:3001
CORS_ORIGIN=http://localhost:3000

# ============================================================================
# Database Configuration (PostgreSQL with TimescaleDB)
# ============================================================================
DB_HOST=postgres
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=CHANGE_ME_SECURE_PASSWORD
DB_DATABASE=pulsecal
DB_SSL=false
DB_SYNCHRONIZE=false
DB_LOGGING=false

# ============================================================================
# Redis Configuration
# ============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# ============================================================================
# AI Services
# ============================================================================
AI_SERVICES_PORT=8000
AI_SERVICE_ENABLED=true

# ============================================================================
# Observability (Disabled in production)
# ============================================================================
TRACING_ENABLED=false
METRICS_ENABLED=false

# ============================================================================
# Security Settings
# ============================================================================
# Session secret for jail authentication (generate with: openssl rand -base64 32)
SESSION_SECRET=CHANGE_ME_GENERATE_SECURE_SECRET

# IP restriction for login (comma-separated CIDR blocks, empty to disable)
LOGIN_ALLOWED_IPS=

# ============================================================================
# Alert Thresholds (Optional - uses defaults if not set)
# ============================================================================
# ALERT_HR_NORMAL_MIN=60
# ALERT_HR_NORMAL_MAX=100
# ALERT_HR_WARNING_MIN=50
# ALERT_HR_WARNING_MAX=120
# ALERT_HR_CRITICAL_MIN=40
# ALERT_HR_CRITICAL_MAX=150
# ALERT_TEMP_NORMAL_MIN=36.1
# ALERT_TEMP_NORMAL_MAX=37.2
# ALERT_TEMP_WARNING_MIN=35.5
# ALERT_TEMP_WARNING_MAX=38.0
# ALERT_TEMP_CRITICAL_MIN=34.0
# ALERT_TEMP_CRITICAL_MAX=39.5
# ALERT_SPO2_NORMAL_MIN=95
# ALERT_SPO2_WARNING_MIN=93
# ALERT_SPO2_CRITICAL_MIN=90
# ALERT_BATTERY_WARNING=20
# ALERT_BATTERY_CRITICAL=10
# ALERT_MIN_CONFIDENCE=0.6

# ============================================================================
# Backup Configuration
# ============================================================================
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *
BACKUP_DIR=./backups
